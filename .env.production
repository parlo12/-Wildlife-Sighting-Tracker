# Production Environment Configuration
# Copy this file to .env on the server

# Base URL (your domain)
BASE_URL=https://koteglasye.com

# Upload directory
UPLOAD_DIR=uploads

# CORS settings
CORS_ALLOWED_ORIGINS=https://koteglasye.com,https://www.koteglasye.com

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wildlife_map
DB_USER=postgres
DB_PASS=your_secure_password_here_change_me

# Logging
LOG_FILE=logs/access.log

# FCM settings (optional - for push notifications)
FCM_SERVER_KEY=
FCM_NOTIFICATION_TITLE=Wildlife Spotted Nearby!
FCM_NOTIFICATION_BODY=A new sighting was reported within 30 miles of you.
FCM_V1_PROJECT_ID=
FCM_V1_PRIVATE_KEY=
FCM_V1_CLIENT_EMAIL=
FCM_V1_TOKEN_URI=https://oauth2.googleapis.com/token

# Radius for nearby notifications (in meters, default 30 miles)
RADIUS_METERS=48280

# Security (generate strong random passwords)
DB_PASSWORD=CHANGE_ME_TO_A_SECURE_PASSWORD_123456789

# Application settings
APP_ENV=production
APP_DEBUG=false
