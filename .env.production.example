# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production - it contains sensitive data!

# Base URL (your domain)
BASE_URL=https://your-domain.com

# Upload directory
UPLOAD_DIR=uploads

# CORS settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database settings
# IMPORTANT: For Docker deployment, use 'postgis' as the hostname (the Docker service name)
DB_HOST=postgis
DB_PORT=5432
DB_NAME=wildlife_map
DB_USER=postgres
DB_PASS=CHANGE_ME_TO_SECURE_PASSWORD

# Logging
LOG_FILE=logs/access.log

# FCM settings (optional - for push notifications)
FCM_SERVER_KEY=
FCM_NOTIFICATION_TITLE=Wildlife Spotted Nearby!
FCM_NOTIFICATION_BODY=A new sighting was reported within 30 miles of you.
FCM_V1_PROJECT_ID=
FCM_V1_PRIVATE_KEY=
FCM_V1_CLIENT_EMAIL=
FCM_V1_TOKEN_URI=https://oauth2.googleapis.com/token

# Radius for nearby notifications (in meters, default 30 miles)
RADIUS_METERS=48280

# Security
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Web Push (VAPID keys) - REQUIRED for push notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@your-domain.com

# Dashboard password - REQUIRED for /dashboard.php access
DASHBOARD_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Application settings
APP_ENV=production
APP_DEBUG=false
