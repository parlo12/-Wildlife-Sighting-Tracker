# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wildlife_map
DB_USER=postgres
DB_PASS=changeme

# Uploads
UPLOAD_DIR=uploads

# Notification radius (in meters). 48280 = 30 miles
RADIUS_METERS=48280

# Base URL used to build absolute image URLs (no trailing slash)
BASE_URL=http://localhost:8000

# CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=false

# Firebase Cloud Messaging (server key for legacy send API)
FCM_SERVER_KEY=your-fcm-server-key
FCM_NOTIFICATION_TITLE=New Wildlife Sighting
FCM_NOTIFICATION_BODY=A new sighting was reported near you.

# Firebase Cloud Messaging v1 (service account)
FCM_PROJECT_ID=your-project-id
FCM_CLIENT_EMAIL=service-account@your-project-id.iam.gserviceaccount.com
# Paste the private key as a single line with \n literals, e.g.:
# -----BEGIN PRIVATE KEY-----\nABC...\n-----END PRIVATE KEY-----\n
FCM_PRIVATE_KEY=
FCM_TOKEN_URI=https://oauth2.googleapis.com/token
